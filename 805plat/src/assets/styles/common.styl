@require './var.styl';

* {
    box-sizing: border-box;
}

html, body {
    font-size: 30px;
    background: $color-bg;
    height: 100%;
}

.container {
    background: #fff;
    border-radius: $size-radius;
    width: $width-content;
    margin: $padding-s auto;
    height: calc(100% - 20px);
}

.tab-container {
    width: 100%;
    padding: $padding-m;

    .iconfont {
        font-size: $size-xl;
        margin-right: $padding-s;
        margin-bottom: $padding-m;
    }

    .tab-title {
        font-size: $size-m;
        margin-top: 5px;
        margin-bottom: $padding-m;
    }
}

.list-block {
    width: $width-content;
    margin: $padding-m auto;
    background: #fff;
    border-radius: $size-radius;
}
